# Environment variables for LangForge Documentation
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security
SESSION_SECRET=your-super-secret-session-key-here
CORS_ORIGIN=https://langforge.dev
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
POSTHOG_API_KEY=your-posthog-key
SENTRY_DSN=your-sentry-dsn

# Content Delivery
CDN_URL=https://cdn.langforge.dev
STATIC_ASSETS_URL=https://assets.langforge.dev

# Database (if needed for analytics/feedback)
DATABASE_URL=postgresql://user:password@localhost:5432/langforge_docs

# External Services
GITHUB_TOKEN=your-github-token-for-contributions
OPENAI_API_KEY=your-openai-key-for-examples

# Search Configuration
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-search-key
ALGOLIA_INDEX_NAME=langforge_docs

# Email (for feedback/contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@langforge.dev
SMTP_PASS=your-app-password

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600